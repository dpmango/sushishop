.button
	box-sizing border-box
	display inline-block
	text-transform uppercase
	letter-spacing .075em
	text-align center
	&_border
		border 2px solid $color__orange
		color $color__orange
		border-radius 23px
	&_small
		font-size 14px
		padding 6px 14px
	&_medium
		font-size 16px
		padding 12px 24px
