.button
	box-sizing border-box
	display inline-block
	text-transform uppercase
	letter-spacing .075em
	text-align center
	transition-property background, border-color, color
	transition-duration .3s
	&:hover
		transition-duration .15s
	&_border
		border 2px solid $color__orange
		color $color__orange
		border-radius 23px
		&:hover
			color $color__orange_lighten
			border-color $color__orange_lighten
		&:active
			color $color__orange_dark
			border-color $color__orange_dark
	&_fill
		color $color__white !important
		background $color__orange
		border-radius 23px
		&:hover
			background $color__orange_lighten
		&:active
			background $color__orange_dark
	&_small
		font-size 14px
		padding 6px 14px
	&_medium
		font-size 16px
		padding 12px 24px
