.main-journal
	max-width 1280px
	margin 0 auto
	position relative
	@media (min-width 750px)
		padding 0 66px
	@media (max-width 750px) and (min-width 600px)
		padding 0 30px
	@media (max-width 600px) and (min-width 400px)
		padding 0 10px
	&__title
		color $color__gray
		text-align center
		margin-bottom 25px
	&__list
		position relative
		overflow hidden
		@media(min-width 400px)
			padding 15px 0
			margin -15px 0
			&:before, &:after
				content ''
				display block
				position absolute
				width 16px
				top 0
				bottom 24px
				z-index 10
				background radial-gradient(ellipse at center, alpha($color__black, .45) 0%, alpha($color__black, .14) 65%, alpha($color__black, 0) 72%)
				opacity 1
				transition .1s all
			&:before
				left -8px
			&:after
				right -8px
			&_begin:before
				left -16px
			&_end:after
				right -16px
		@media(max-width 400px)
			margin-bottom 20px
		.swiper-slide
			width auto
		&-wrapper:not(.swiper-container-horizontal) .swiper-wrapper
			flex-flow column
		.swiper-container-horizontal
			overflow hidden
		.swiper-scrollbar
			height 4px
			background alpha($color__gray, .1)
			border-radius 2px
			position relative
			overflow hidden
			margin 20px 0 0 0
			@media (max-width 400px)
				display none
			.swiper-scrollbar-drag
				background alpha($color__gray, .5)
				height 4px
				border-radius 2px
		.journal-item
			@media (min-width 1280px)
				width 530px
			@media (max-width 1280px) and (min-width 1000px)
				width 485px
			@media (max-width 1000px) and (min-width 775px)
				width 440px
			@media (max-width 775px) and (min-width 550px)
				width 395px
			@media (max-width 550px) and (min-width 400px)
				width 350px
			@media (max-width 400px)
				width 100%
	&__more
		padding 0 20px
		@media (min-width 400px)
			display none
		.button
			width 100%
			font-weight bold