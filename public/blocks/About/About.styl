.about-header
	background $color__black
	position relative
	&:before
		content ''
		width 100%
		padding-top 52.34375%
		float left
	&:after
		content ''
		display block
		top 0
		right 0
		bottom 0
		left 0
		position absolute
		opacity .45
		z-index 2
		background-size cover
		@media (min-width 1000px)
			background-image url(/f/images/about/about-bg-big.jpg)
		@media (max-width 1000px) and (min-width 400px)
			background-image url(/f/images/about/about-bg-medium.jpg)
		@media (max-width 400px)
			background-image url(/f/images/about/about-bg-small.jpg)
	&__wrapper
		position absolute
		display flex
		flex-flow column
		justify-content center
		align-items center
		top 0
		right 0
		bottom 0
		left 0
		z-index 3
	&__logo
		fill $color__white
		@media (min-width 1000px)
			width 90px
			height 90px
		@media (max-width 1000px) and (min-width 400px)
			width 60px
			height 60px
		@media (max-width 400px)
			width 46px
			height 46px
	&__title
		color $color__white
		text-align center
		text-transform uppercase
		letter-spacing .05em
		line-height 1
		@media (min-width 1000px)
			font-size 48px
			margin-top .5em
		@media (max-width 1000px) and (min-width 700px)
			font-size 36px
			margin-top .75em
		@media (max-width 700px) and (min-width 400px)
			font-size 27px
			margin-top .75em
		@media (max-width 400px)
			font-size 18px
			margin-top 1em
	&__clr
		clear both
		overflow hidden
		height 0

.about-tradition
	background $color__white
	&__wrapper
		@media (min-width 1100px)
			max-width 940px
			margin 0 auto
		@media (max-width 1100px) and (min-width 900px)
			margin 0 80px
		@media (max-width 900px) and (min-width 700px)
			margin 0 40px
		@media (max-width 700px)
			padding 40px 20px


.about-tradition-story
	@media (min-width 700px)
		background url(/f/images/about/wok.jpg) 0 bottom no-repeat
	@media (min-width 950px)
		background-size 384px auto
		padding 200px 0 50px 420px
		margin-bottom 50px
	@media (max-width 950px) and (min-width 700px)
		background-size 300px auto
		padding 140px 0 40px 330px
		margin-bottom 50px
	&__title
		text-transform uppercase
		line-height 1
		margin-bottom .5em
		@media (min-width 950px)
			font-size 36px
		@media (max-width 950px) and (min-width 700px)
			font-size 27px
		@media (max-width 700px)
			font-size 18px
	&__descr
		line-height 1.5
		@media (min-width 950px)
			font-size 16px
		@media (max-width 950px) and (min-width 700px)
			font-size 15px
		@media (max-width 700px)
			font-size 14px


.about-tradition-open
	display flex
	flex-flow row
	align-items center
	@media (min-width 950px)
		margin-top 30px
	@media (max-width 950px) and (min-width 700px)
		margin-top 22px
	@media (max-width 700px)
		margin-top 25px
	&__year
		white-space nowrap
		color $color__orange
		font-size 48px
		font-weight bold
		letter-spacing -.05em
		margin-right 20px
	&__descr
		line-height 1
		max-width 200px
		margin-top -6px
		@media (min-width 950px)
			font-size 14px
		@media (max-width 950px) and (min-width 700px)
			font-size 13px
		@media (max-width 700px)
			font-size 12px


.about-growth
	max-width 820px
	margin 0 auto
	color #676767
	@media (min-width 950px)
		padding-bottom 100px
	@media (max-width 950px) and (min-width 700px)
		padding-bottom 70px
	@media (max-width 700px)
		padding-top 45px
	&__list
		display flex
		flex-flow row
		justify-content space-between
		position relative
		z-index 2
		@media (min-width 700px)
			margin 0 0 65px 0
		@media (max-width 700px)
			margin 0 0 55px 0
		&:before
			content ''
			display block
			position absolute
			left 0
			right 0
			top 50%
			z-index 1
			height 1px
			background linear-gradient(to right, #979797, #979797 60%, transparent 60%)
			background-size 4px 1px
			background-repeat repeat-x
	&__caption
		text-align center
		@media (min-width 700px)
			font-size 14px
		@media (max-width 700px)
			font-size 10px


.about-growth-item
	display flex
	align-items center
	position relative
	z-index 2
	&_forecast
		&:before
			content 'Прогноз'
			position absolute
			top 100%
			width 50px
			left 50%
			letter-spacing .075em
			text-transform uppercase
			text-align center
			margin-left -25px
			@media (min-width 700px)
				margin-top 30px
				font-size 10px
			@media (max-width 700px)
				margin-top 22px
				font-size 9px
	&__circle
		width 100%
		background $color__orange
		border-radius 50%
		box-sizing border-box
		&:before
			content ''
			width 100%
			padding-top 100%
			float left
		&:after
			content ''
			display block
			clear both
			overflow hidden
			height 0
	&_forecast &__circle
		background $color__white
		border 1px solid $color__orange
	&__count
		position absolute
		z-index 3
		width 50px
		left 50%
		margin-left -25px
		text-align center
		@media (min-width 700px)
			top 50%
			margin-top -6px
			font-size 14px
			color $color__white
		@media (max-width 700px)
			bottom 100%
			font-size 10px
			margin-bottom 4px
	&:first-of-type &__count
		display none
	&_forecast &__count
		@media (min-width 700px)
			font-size 18px
			color #676767
	&__year
		position absolute
		top 100%
		width 50px
		left 50%
		margin-left -25px
		text-align center
		@media (min-width 700px)
			margin-top 10px
			font-size 16px
		@media (max-width 700px)
			font-size 9px
			margin-top 8px


.about-experiment
	position relative
	background-repeat no-repeat
	color $color__white
	@media (min-width 650px)
		background-position right top
	@media (max-width 650px) and  (min-width 550px)
		background-position 140% top
	@media (min-width 550px)
		background-image url(/f/images/about/rolls-big.png)
		background-size auto 100%
	@media (max-width 450px)
		background-image url(/f/images/about/rolls-small.png)
		background-position left bottom
		background-size 100% auto
	&:after
		content ''
		display block
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		background-size cover
		background-color $color__gray
		background-repeat no-repeat
		z-index -1
		@media (min-width 450px)
			background-image url(/f/images/about/rolls-bg-big.jpg)
		@media (max-width 450px)
			background-image url(/f/images/about/rolls-bg-small.jpg)
	&__wrapper
		margin 0 auto
		box-sizing border-box
		@media (min-width 1200px)
			padding 185px 350px 200px 0
		@media (max-width 1200px) and (min-width 1000px)
			padding 155px 425px 170px 0
		@media (min-width 1000px)
			max-width 830px
		@media (max-width 1000px) and (min-width 850px)
			padding 80px 425px 80px 80px
		@media (max-width 850px) and (min-width 650px)
			padding 40px 300px 40px 40px
		@media (max-width 650px) and (min-width 550px)
			padding 40px 180px 40px 40px
		@media (max-width 550px) and (min-width 450px)
			padding 30px 20px 40px 20px
		@media (max-width 450px)
			padding 30px 20px 70% 20px
	&__title
		text-transform uppercase
		letter-spacing .075em
		line-height 1
		margin-bottom .75em
		@media (min-width 1200px)
			font-size 36px
		@media (max-width 1200px) and (min-width 1000px)
			font-size 30px
		@media (max-width 1000px) and (min-width 550px)
			font-size 24px
		@media (max-width 550px)
			font-size 18px
	&__descr
		line-height 1.5
		@media (min-width 1000px)
			font-size 16px
		@media (max-width 1000px) and (min-width 550px)
			font-size 15px
		@media (max-width 550px)
			font-size 14px
		p + p
			margin-top 1em



.about-experiment-recipes
	display flex
	flex-flow row
	align-items center
