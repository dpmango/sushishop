.about-open-summary
	display flex
	flex-flow row
	@media (min-width 1000px)
		margin-top 50px
	@media (max-width 1000px) and (min-width 700px)
		margin-top 40px
	@media (max-width 700px)
		margin-top 30px
	@media (max-width 500px)
		flex-wrap wrap
		justify-content space-around
	&__item
		font-size 14px
		@media (max-width 500px)
			margin 0 10px 20px 10px
		& + &
			@media (min-width 500px)
				margin-left 30px
		&_short
			@media (max-width 1000px)
				span
					&:after
						content '.'
					font
						display none
		span
			display block
			font-weight bold
			white-space nowrap
			@media (min-width 1000px)
				font-size 36px
			@media (max-width 1000px) and (min-width 700px)
				font-size 33px
			@media (max-width 700px)
				font-size 30px
			br
				@media (min-width 500px)
					display none