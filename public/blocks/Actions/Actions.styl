.actions
	max-width 1080px
	margin 0 auto
	&__list
		display flex
		flex-flow row
		flex-wrap wrap
	&__item
		width 50%
		box-sizing border-box
		padding-bottom 20px
		&:nth-of-type(2n-1)
			padding-right 10px
		&:nth-of-type(2n)
			padding-left 10px


.actions-item
	background $color__white
	display block
	text-align center
	color $color__gray
	text-transform uppercase
	letter-spacing .05em
	padding 20px 30px 23px 30px
	height 100%
	box-sizing border-box
	&__image
		margin -20px -30px 15px -30px
	&__category
		font-size 13px
		color $color__gray
	&__name
		margin-top 6px