.main-catalog
	margin-bottom 60px
	@media (min-width 1280px)
		margin-left 60px
		margin-right 60px
	@media (max-width 1280px) and (min-width 750px)
		margin-left 50px
		margin-right 50px
	@media (max-width 750px) and (min-width 600px)
		margin-left 30px
		margin-right 30px
	@media (max-width 600px)
		margin-left 10px
		margin-right 10px
	&__title
		text-transform uppercase
		letter-spacing .05em
		color $color__gray
		text-align center
		margin-bottom 1em
	&__list
		display flex
		flex-wrap wrap
		margin -3px

.main-catalog-item
	box-sizing border-box
	position relative
	@media (min-width 900px)
		width 25%
	@media (max-width 900px)
		width 50%
	&:before
		content ''
		padding-top 100%
		float left
	&__wrapper
		display flex
		background $color__white
		position absolute
		top 2px
		right 2px
		bottom 2px
		left 2px
		justify-content center
		align-items center
	&__photo
		position relative
		@media (min-width 1125px), (max-width 900px) and (min-width: 575px)
			margin-top -30px
		@media (max-width: 1125px) and (min-width: 900px), (max-width: 575px) and (min-width: 400px)
			margin-top -20px
		@media (max-width: 400px)
			margin-top -10px
	&_rolls &__photo
		margin-right -10%
	&_wok &__photo
		margin-right -11%
	&_sushi &__photo
		margin-right -4%
	&_soup &__photo
		margin-right -3%
	&_drinks &__photo
		margin-right -2%
	&_salads &__photo
		margin-right -3.5%
	&_for-sushi &__photo
		margin-right -11%
	&_sets &__photo
		margin-right -7%
		@media (min-width 1125px), (max-width 900px) and (min-width: 575px)
			margin-top -17.5px
	&__name
		position absolute
		font-weight bold
		text-transform uppercase
		color #55534F
		left 0
		right 0
		text-align center
		transition .3s color
		@media (min-width 975px), (max-width 900px)
			bottom 24px
			font-size 16px
			letter-spacing .05em
		@media (max-width 975px) and (min-width 400px)
			font-size 14px
			bottom 20px
			letter-spacing .03em
		@media (max-width 400px)
			font-size 14px
			bottom 15px
			letter-spacing .02em
	&__wrapper:hover &__name
		color $color__orange
		transition-duration .1s