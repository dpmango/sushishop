.pager
	@media (min-width 1050px)
		margin-bottom 65px
	@media (max-width 1050px) and (min-width 600px)
		margin-bottom 40px
	@media (max-width 600px)
		margin-bottom 20px
	&__head
		position relative
	&__bg
		display block
		img
			display block
			width 100%
	&__wrapper
		position absolute
		left 0
		right 0
		top 0
		display flex
		text-align center
		justify-content center
		align-items center
		flex-flow column
		@media (min-width 1280px)
			bottom 170px
		@media (max-width 1280px)
			padding 0 10%
		@media (max-width 1280px) and (min-width 1050px)
			bottom 230px
		@media (max-width 1050px) and (min-width 820px)
			bottom 180px
		@media (max-width 820px)
			bottom 30px
	&__logo
		width 47px
		height 48px
		fill $color__white
		display block
	&__title
		display block
		text-transform uppercase
		font-weight bold
		color $color__white
		@media (min-width 950px)
			font-size 36px
			margin-top 32px
		@media (max-width 950px) and (min-width 550px)
			font-size 28px
			margin-top 26px
		@media (max-width 550px)
			font-size 18px
			margin-top 18px
		br
			@media (min-width 1280px)
				display none
	&__links
		position relative
		z-index 1
		@media (min-width 750px)
			margin 0 66px 0 65px
		@media (max-width 750px) and (min-width 600px)
			margin 0 30px
		@media (max-width 600px) and (min-width 500px)
			margin 0 10px
		@media (min-width 1050px)
			margin-top -260px
		@media (max-width 1050px) and (min-width 820px)
			margin-top -185px
		@media (max-width 820px)
			margin-top -20px
		@media (min-width 900px)
			box-shadow 0 15px 40px 0 alpha($color__black, .08)
		.swiper-container-horizontal
			overflow hidden
		.swiper-slide
			display flex
			height auto
			@media (min-width 750px)
				width (100%/3)
			@media (max-width 500px)
				padding 0 10px
				box-sizing border-box
		.swiper-pagination
			text-align center
			@media (min-width 900px)
				display none
			.swiper-pagination-bullet
				width 20px
				height 28px
				display inline-block
				position relative
				&.swiper-pagination-bullet-active:after
					background $color__orange
				&:after
					content ''
					display block
					width 8px
					height 8px
					position absolute
					border-radius 50%
					background alpha($color__gray_dark, .1)
					top 50%
					left 50%
					margin -4px 0 0 -4px
					transition background .3s

.pager-link
	display block
	color #55534F
	text-align center
	position relative
	//@media (max-width 500px)
	background $color__white
	@media (max-width 500px)
		box-shadow 0 15px 40px 0 alpha($color__black, .08)
	&:before
		display block
		width 1px
		background alpha($color__gray, .1)
		right 0
		position absolute
		@media (min-width 1050px)
			top 255px
			bottom 45px
		@media (max-width 1050px) and (min-width 620px)
			top 210px
			bottom 30px
		@media (max-width 620px)
			top 160px
			bottom 10px
		.swiper-wrapper .swiper-slide:not(:last-of-type) &
			content ''
	&__photo
		overflow hidden
		@media (min-width 1050px)
			height 210px
		@media (max-width 1050px) and (min-width 620px)
			height 170px
		@media (max-width 620px)
			height 140px
		&-wrapper
			@media (min-width 600px)
				margin 0 -100px -100px -100px
			@media (max-width 600px), (max-width 765px) and (min-width 620px)
				margin 0 0 -100px 0
			img
				display block
				margin 0 auto
				@media (min-width 1050px)
					height 210px
				@media (max-width 1050px) and (min-width 900px)
					height 170px
				@media (max-width 900px) and (min-width 765px), (max-width 620px) and (min-width 600px)
					width 383px
				@media (max-width 600px), (max-width 765px) and (min-width 620px)
					width 100%
	&__wrapper
		padding 0 10%
		@media (min-width 1050px)
			padding-top 30px
			padding-bottom 55px
		@media (max-width 1050px)
			padding-top 20px
			padding-bottom 40px
	&__category
		font-size 12px
		text-transform uppercase
		letter-spacing .1em
		color alpha($color__gray, .5)
		margin-bottom 10px
	&__name
		line-height 1.2
		@media (min-width 1050px)
			font-size 24px
		@media (max-width 1050px)
			font-size 20px