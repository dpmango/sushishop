.catalog-list-category
	background #2A2A2A
	height 180px
	overflow hidden
	&__wrapper
		height 100%
	&__item-outer
		width 200px !important
	&__item
		width 100%
		height 100%
		text-align center
		display flex
		align-items center
		justify-content center
		flex-flow column
		position absolute
		transition background .3s
		&:not(&_active):hover
			background alpha($color__white, .05)
		&:before
			content ''
			display block
			position absolute
			left 50%
			margin-left -13px
		&_active
			cursor default
	&_top &__item:before
		border 13px solid transparent
		border-bottom 13px solid $color__bg
		bottom -26px
	&_top &__item_active:before
		bottom 0
	&_bottom &__item:before
		border 13px solid transparent
		border-top 13px solid $color__bg
		top -26px
	&_bottom &__item_active:before
		top 0
	&__name
		text-transform uppercase
		color $color__white
		letter-spacing .075em