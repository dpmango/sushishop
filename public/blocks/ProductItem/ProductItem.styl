.product-item
	background $color__white
	box-sizing border-box
	padding 35px 35px 95px 35px
	color #55534F !important
	position relative
	&__name
		font-size 18px
		font-weight 600
		text-align center
		line-height 1
		text-transform uppercase
		letter-spacing .03em
		margin-bottom 25px
		transition color .3s
	&:hover &__name
		color $color__orange
		transition-duration .15s
	&:active &__name
		color $color__orange_dark
	&__photo
		max-width 100%
		display block
		margin-bottom 40px
		img
			max-width 100%
			display block
			margin 0 auto
	&__descr
		font-size 14px
		line-height 1
		text-align center
		padding 0 10%
	&__footer
		display flex
		justify-content space-between
		align-items center
		color #55534F
		margin-top 20px
		position absolute
		bottom 35px
		left 35px
		right 35px
	&__footer-wrapper
		.mac &
			margin-bottom -2px
	&__weight
		font-size 14px
		opacity .8
		margin-bottom 2px
	&__price
		font-size 22px
		font-weight 500
	&__buy
		width 42px
		height 42px
		background $color__orange
		border-radius 50%
		position relative
		&:after, &:before
			content ''
			display block
			background $color__white
			position absolute
			top 50%
			left 50%
		&:after
			width 2px
			height 16px
			margin -8px 0 0 -1px
		&:before
			width 16px
			height 2px
			margin -1px 0 0 -8px
