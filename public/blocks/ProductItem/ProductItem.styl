.product-item
	background $color__white
	box-sizing border-box
	padding 35px
	color #55534F
	&__name
		font-size 18px
		font-weight 600
		text-align center
		line-height 1
		text-transform uppercase
		letter-spacing .03em
		margin-bottom 25px
	&__photo
		max-width 100%
		display block
		margin-bottom 40px
		img
			max-width 100%
			display block
	&__descr
		font-size 14px
		line-height 1
		text-align center