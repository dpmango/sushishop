.shops
	height 700px
	display flex
	flex-flow row
	//overflow hidden
	position relative
	&__header
		position absolute
		z-index 2
		background $color__white
		width 300px
		padding 40px 20px 20px 30px
	&__list
		min-width 350px
		position relative
		overflow hidden
		background $color__white
		padding 0 30px 25px 30px
		box-sizing border-box
		margin-top 154px
		border-top 1px solid alpha($color__gray, .2)
		transition .2s border
		&_begin
			border-top-color alpha($color__gray, 0)
		.swiper-scrollbar
			position absolute
			top 5px
			bottom 5px
			right 10px
			z-index 99
		.swiper-scrollbar-drag
			width 4px
			background alpha($color__gray, .5)
			border-radius 2px
		.swiper-slide
			height auto
	&__city
		font-size 18px
		text-transform uppercase
		letter-spacing .05em
		margin-bottom 16px
		line-height 1.1
		&_open
			svg
				transform rotate(180deg)
		a
			position relative
			svg
				display block
				position absolute
				width 8px
				height 5px
				fill #979797
				left 100%
				top 7px
				margin-left 5px
				transition .3s transform
		&_loading a:after
			content 'Санкт-Петербург'
			display inline-block
			loading()
	&__near
		font-size 14px
		text-transform uppercase
		font-weight bold
		letter-spacing .05em
		padding 11px 20px 10px 38px
		text-align center
		border-radius 20px
		box-sizing border-box
		position relative
		span
			width 22px
			height 22px
			fill $color__orange
			display inline-block
			position absolute
			top 50%
			margin-top -11px
			left 10px
	&__map
		width 100%
		height 100%
	&__city-popup
		position absolute
		width 620px
		background $color__white
		z-index 1000
		left 30px
		top 94px
		border-radius 10px
		transition-property opacity, transform
		opacity 1
		&_hided
			display none
		&_hide, &_show
			transform translate3d(0, 20px, 0)
			opacity 0
		&_showed
			transform translate3d(0, 0, 0)
		&:before
			content ''
			display block
			border 10px solid transparent
			border-bottom 10px solid $color__white
			position absolute
			bottom 100%
			left 30px
	&__city-popup-wrapper
		overflow hidden
		width 100%
		height 100%


.shops-item
	padding 8px 30px
	margin 0 -30px
	cursor pointer
	&:hover
		background #fefefe
	&__adres
		display inline-block
	&__new
		background $color__red
		color $color__white
		border-radius 3px
		display inline-block
		text-transform uppercase
		font-size 13px
		line-height 1
		letter-spacing .05em
		vertical-align middle
		padding 4px 7px 2px 7px
		margin -5px -7px -2px 12px
	&__phone
		margin-top 4px
		display inline-block
		color $color__gray



.shop-infobox
	background $color__white
	border-radius 10px
	font normal normal 16px/1.125 DIN, Helvetica, Arial, sans-serif
	padding 25px
	width 420px
	margin-left auto
	box-sizing border-box
	margin 0 auto
	&:before
		content ''
		border 10px solid transparent
		border-bottom 18px solid $color__white
		display block
		position absolute
		left 50%
		margin-left -10px
		bottom 100%
	&__adres
		margin-bottom 10px
	&__time
		display inline-block
		margin-right 40px
	&__phone
		display inline-block
		a
			color $color__gray_dark
	&__action
		margin-top 20px
	&__reviews
		font-size 14px
		font-weight bold
		padding 11px 23px 9px 23px
		line-height 15px
	&__change
		display inline-block
		color $color__orange
		border-bottom 1px dotted $color__orange
		margin-left 22px
	&_active &__change
		display none


.shops-city
	&_group
		display none
	&__title
		font-weight bold
		text-align center
		height 70px
		border-bottom 1px solid alpha($color__gray, .3)
		color $color__gray
		display flex
		align-items center
		justify-content center
		text-transform uppercase
		letter-spacing .075em
	&__list
		padding 10px 55px 20px 60px
		display flex
		justify-content space-between
		font-size 0
	&__column
		display flex
		flex-flow column


.shops-city-item
	font-size 20px
	display inline-block
	white-space nowrap
	padding 12px 10px
	line-height 1
	position relative
	cursor pointer
	align-self flex-start
	&:hover
		color $color__orange
	&:before
		content '—'
		position absolute
		right 100%
		color alpha($color__gray, .5)
	&_group
		span
			border-bottom 1px dotted alpha($color__gray, .75)
		&:hover span
			border-bottom-color $color__orange