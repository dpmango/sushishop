.popup
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	z-index 1000
	display flex
	align-items center
	justify-content center
	pointer-events none
	opacity 0
	transition opacity .3s
	&_show
		pointer-events all
		opacity 1
		transition-duration .15s
	&__bg
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		background alpha(#A9A29B, .75)
		z-index 10
	&__window
		width 870px
		background $color__white
		padding 40px 60px 50px 60px
		box-sizing border-box
		position relative
		z-index 20
		transform translateY(50px)
		transition transform .3s
	&_show &__window
		transform translateY(0)
		transition-duration .15s
	&__close
		width 105px
		height 105px
		position absolute
		top 0
		right 0
		display flex
		align-items center
		justify-content center
		cursor pointer
		transition .3s opacity
		&:hover
			opacity .65
			transition-duration .15s
		svg
			width 25px
			height 25px
			display block
	&__title
		text-align center
		text-transform uppercase
		letter-spacing .06em
		font-size 24px
		font-weight bold
		margin-bottom 32px
	&__footer
		display flex
		justify-content space-between
		align-items center
	&__checked
		font-size 14px
		display flex
		align-items center
		cursor pointer
		position relative
	&__checkbox
		width 24px
		height 24px
		box-sizing border-box
		border 2px solid $color__gray_light
		margin-right 10px
		svg
			fill #F56F2B
			left 3px
			bottom 7px
			position absolute
			display block
			opacity 0
			transform translateX(-4px)
			transition-property opacity, transform
			transition-duration .2s
		&_active
			svg
				opacity 1
				transform translateX(0)
				transition-duration .1s
	&__send
		font-size 22px
		text-align center