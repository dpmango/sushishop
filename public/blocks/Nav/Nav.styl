.nav
	display flex
	@media (min-width 900px)
		align-items stretch
		margin-left auto
	@media (max-width 900px)
		flex-direction column
		width 100%
	&__item
		text-transform uppercase
		color $color__gray_dark
		display flex
		align-items center
		position relative
		@media (min-width 1100px)
			font-size 18px
			padding 0 18px
			letter-spacing .075em
		@media (min-width 1000px) and (max-width 1100px)
			font-size 16px
			padding 0 10px
			letter-spacing .1em
		@media (min-width 900px) and (max-width 1000px)
			font-size 14px
			padding 0 8px
			letter-spacing .1em
		@media (max-width 900px)
			padding 15px 20px 11px 20px
			font-size 18px
			font-weight bold
			color $color__gray
			letter-spacing .025em
		&_active
			@media (max-width 900px)
				background lighten($color__gray_light, 65%)
			@media (min-width 900px)
				&:before
					content ''
					display block
					position absolute
					top 0
					left 5px
					right 5px
					background $color__gray
					height 6px
					border-radius 0 0 4px 4px