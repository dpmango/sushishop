$color__bg = #F9F2E9
$color__white = #FFF
$color__black = #000
$color__gray = #414141
$color__gray_dark = #222
$color__gray_light = #AAA
$color__orange = #F16722
$color__orange_dark = darken($color__orange, 20%)
$color__orange_lighten = lighten($color__orange, 20%)
$color__red = #D0021B

@charset "utf8"

@font-face
	font-family DIN
	src url('../fonts/dinregular.eot')
	src url('../fonts/dinregular.eot?#iefix') format('embedded-opentype'),
		url('../fonts/dinregular.woff2') format('woff2'),
		url('../fonts/dinregular.woff') format('woff'),
		url('../fonts/dinregular.ttf') format('truetype'),
		url('../fonts/dinregular.svg#pf_dindisplay_proregular') format('svg')
	font-weight normal
	font-style normal

@font-face
	font-family DIN
	src url('../fonts/dinmedium.eot')
	src url('../fonts/dinmedium.eot?#iefix') format('embedded-opentype'),
		url('../fonts/dinmedium.woff2') format('woff2'),
		url('../fonts/dinmedium.woff') format('woff'),
		url('../fonts/dinmedium.ttf') format('truetype'),
		url('../fonts/dinmedium.svg#pf_dindisplay_proregular') format('svg')
	font-weight 500
	font-style normal

@font-face
	font-family DIN
	src url('../fonts/dinbold.eot')
	src url('../fonts/dinbold.eot?#iefix') format('embedded-opentype'),
		url('../fonts/dinbold.woff2') format('woff2'),
		url('../fonts/dinbold.woff') format('woff'),
		url('../fonts/dinbold.ttf') format('truetype'),
		url('../fonts/dinbold.svg#pf_dindisplay_probold') format('svg')
	font-weight bold
	font-style normal


*
	margin 0
	padding 0
	-webkit-tap-highlight-color transparent
	outline none


html
	@media (max-width 900px)
		position fixed
		width 100%
		height 100%

body
	font normal normal 16px/1.125 DIN, Helvetica, Arial, sans-serif
	background $color__bg
	color $color__gray_dark
	position relative
	overflow-x hidden
	overflow-y scroll
	min-width 1020px
	//min-width 320px
	-webkit-font-smoothing antialiased
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
	@media (max-width 900px)
		transform translate3d(0, 0, 0)
		transition .3s transform
		position fixed
		width 100%
		height 100%
		&.open-menu
			transform translate3d(272px, 0, 0)


input, textarea, select
	font normal normal 16px/1 DIN, Helvetica, Arial, sans-serif
	appearance none

input, textarea
	border 1px solid #979797
	box-sizing border-box
	padding 10px

select
	&::-ms-expand
		display none

a
	text-decoration none
	color $color__orange
	transition-duration .3s
	transition-property color, border-color
	&:hover
		color $color__orange_lighten
		border-color $color__orange_lighten
		transition-duration .05s
	&:active
		color $color__orange_dark
		border-color $color__orange_dark

h2
	@media (min-width 500px)
		font-size 24px
	@media (max-width 500px)
		font-size 18px


.content
	max-width 1280px
	margin 0 auto
	@media (max-width 900px)
		overflow-y scroll
		position fixed
		top 50px
		left 0
		right 0
		bottom 0
		-webkit-overflow-scrolling touch
	&__inner
		@media (max-width 900px)
			height calc(100% + 1px)


.shadow
	position absolute
	top 0
	right 0
	bottom 0
	left 0
	background alpha(#867F78, .7)
	transition-property opacity
	opacity 0
	&_hided
		display none
	&_show
		opacity 0
	&_showed
		opacity 1



loading()
	animation-duration .75s
	animation-fill-mode forwards
	animation-iteration-count infinite
	animation-name wave
	animation-timing-function linear
	background #dddddd
	background-image linear-gradient(to right,  lighten(#dddddd, 25%) 0%,  lighten(#f5f5f5, 25%) 20%,  lighten(#e5e5e5, 25%) 40%,  lighten(#dddddd, 25%) 100%)
	background-repeat no-repeat
	background-size 400px 100px
	color transparent

@keyframes wave
	0%
		background-position -200px 0
	100%
		background-position 200px 0

