$color__bg = #F9F2E9
$color__white = #FFF
$color__black = #000
$color__gray = #414141
$color__gray_dark = #222
$color__gray_light = #AAA
$color__orange = #F16722
$color__orange_dark = darken($color__orange, 20%)


@font-face
	font-family DIN
	src url('../fonts/dinregular.eot')
	src url('../fonts/dinregular.eot?#iefix') format('embedded-opentype'),
		url('../fonts/dinregular.woff2') format('woff2'),
		url('../fonts/dinregular.woff') format('woff'),
		url('../fonts/dinregular.ttf') format('truetype'),
		url('../fonts/dinregular.svg#pf_dindisplay_proregular') format('svg')
	font-weight normal
	font-style normal

@font-face
	font-family DIN
	src url('../fonts/dinmedium.eot')
	src url('../fonts/dinmedium.eot?#iefix') format('embedded-opentype'),
		url('../fonts/dinmedium.woff2') format('woff2'),
		url('../fonts/dinmedium.woff') format('woff'),
		url('../fonts/dinmedium.ttf') format('truetype'),
		url('../fonts/dinmedium.svg#pf_dindisplay_proregular') format('svg')
	font-weight 500
	font-style normal

@font-face
	font-family DIN
	src url('../fonts/dinbold.eot')
	src url('../fonts/dinbold.eot?#iefix') format('embedded-opentype'),
		url('../fonts/dinbold.woff2') format('woff2'),
		url('../fonts/dinbold.woff') format('woff'),
		url('../fonts/dinbold.ttf') format('truetype'),
		url('../fonts/dinbold.svg#pf_dindisplay_probold') format('svg')
	font-weight bold
	font-style normal


*
	margin 0
	padding 0
	-webkit-tap-highlight-color transparent


html
	@media (max-width 900px)
		position fixed
		width 100%
		height 100%

body
	font normal normal 16px/1.125 DIN, Helvetica, Arial, sans-serif
	background $color__bg
	-webkit-font-smoothing antialiased
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
	position relative
	overflow-x hidden
	@media (max-width 900px)
		transform translateX(0)
		transition .3s transform
		position fixed
		width 100%
		height 100%
		&.open-menu
			transform translateX(272px)

a
	text-decoration none
	color $color__gray
	transition-duration .3s
	transition-property color, border-color
	&:hover
		color $color__orange
		transition-duration .05s
	&:active
		color $color__orange_dark


.content
	max-width 1280px
	margin 0 auto
	@media (max-width 900px)
		overflow-y scroll
		position fixed
		top 50px
		left 0
		right 0
		bottom 0
		-webkit-overflow-scrolling touch
	&__inner
		@media (max-width 900px)
			height calc(100% + 1px)