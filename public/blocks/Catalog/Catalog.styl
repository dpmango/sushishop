.catalog
	&__title
		text-transform uppercase
		text-align center
		color alpha(#222, .8)
		@media (min-width 1001px)
			font-size 48px
			margin 1em 0 .25em 0
		@media (max-width 1000px) and (min-width 710px)
			font-size 36px
			margin 1em 0 .5em 0
		@media (max-width 700px) and (min-width 410px)
			font-size 27px
			margin 1.5em 0 1em 0
		@media (max-width 400px)
			font-size 22px
			margin 1.5em 0 1em 0
	&__list
		margin -3px
		display flex
		flex-wrap wrap
		justify-content flex-start
		align-items stretch
		padding-bottom 30px
		@media (max-width 1300px)
			@media (min-width 550px)
				margin-left 30px
				margin-right 30px
			@media (max-width 551px)
				margin-left 20px
				margin-right 20px
		.product-item
			@media (min-width 850px)
				width calc((100% - 18px) / 3)
			@media (max-width 851px) and (min-width 550px)
				width calc((100% - 12px) / 2)
			@media (min-width 550px)
				margin 3px
			@media (max-width 551px)
				width 100%
				margin 3px 0


.catalog-tags
	margin-bottom 20px
	text-align center
	overflow-x auto
	@media (max-width 450px)
		overflow-x auto
		padding 0 20px
		white-space nowrap
	&__item
		background $color__white
		box-shadow 0 5px 10px 0 alpha($color__black, .06)
		border-radius 5px
		margin 0 3px 6px 3px
		font-size 16px
		color #55534F
		text-transform uppercase
		letter-spacing .03em
		padding 12px 20px 10px 20px
		cursor pointer
		white-space nowrap
		position relative
		display inline-block
		&:before
			content 'Ã—'
			position absolute
			right 12px
			top 12px
			font-weight bold
			font-size 18px
			line-height 1
			transition-property opacity, transform
			transition-duration .3s
			opacity 0
			transform translateX(-7px)
		span
			transition .3s transform
			display inline-block
		&_active
			span
				transform translateX(-7px)
			&:before
				opacity 1
				transform translateX(0)
	&:not(&_show) &__item_hide
		display none
	&__more
		width 43px
		height 40px
		background alpha($color__white, .8)
		box-shadow 0 5px 10px 0 alpha($color__black, .06)
		margin 0 3px
		border-radius 5px
		position relative
		svg
			width 13px
			height 3px
			display block
			position absolute
			left 15px
			top 24px
			fill #55534F
	&_show &__more
		display none