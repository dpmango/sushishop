.login
	position absolute
	background $color__white
	display none
	opacity 0
	z-index 300
	width 360px
	border-radius 10px
	left 50%
	margin-left 271px
	top 92px
	box-sizing border-box
	padding 40px
	transform translate3d(0, 20px, 0)
	transition-property opacity, transform
	&:before
		content ''
		width 16px
		height 16px
		transform rotate(45deg)
		transform-origin 100% 0
		top 0
		right 28px
		position absolute
		background $color__white
	&_show
		display block
	&_showed
		opacity 1
		transform translate3d(0, 0, 0)
		display block
		transition-duration .15s
	&__title
		font-size 20px
		text-transform uppercase
		letter-spacing .03em
		font-weight bold
		margin-bottom 1em
	&__descr
		font-size 14px
		line-height 18px
		margin-bottom 20px
	&__fields
		margin-bottom 12px
		input
			width 100%
			& + input
				margin-top 10px
	&__forgot
		color $color__orange
		border-bottom 1px dotted alpha($color__orange, .2)
		display inline-block
		cursor pointer
	&__button
		display block
		margin-top 10px
		padding 15px 0 13px 0